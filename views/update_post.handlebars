<!--update post-->
<div class="w-75 col-md-12 mx-auto">

  <h2 id="page-title">Update Post</h2>

  <div id="post-id" value="{{post.id}}" hidden></div>

  <div class="w-75 col-md-12 mx-auto">

    <div class="form-group">
      <h4 id="post-update-p" for="title">Title:</h4>

      <input name="updated-post-title" id="post-update-input" class="form-input" type="text" id="updated-title"
        value="{{post.title}}" />
    </div>

    <div class="form-group">
      <br>
      <h4 id="post-update-p" for="contents">Description:</h4>
      <input name="updated-post-contents" class="updated-contents" id="post-update-input" id="updated-contents"
        value="{{post.contents}}" />
    </div>

    <div class="form-group">
      <br>
      <button class="btn btn-primary" id="edit-post-btn" data-id="{{post.id}}">Update Post</button>
    </div>
    <script src="/js/editPost.js"></script>
  </div>

</div>